<header class="heading-box">
	<div class="btns">
		<a href="/conversation/list" class="btn alt">Terug naar het overzicht</a>
	</div>
	<h1>{{getTitle}}</h1>
</header>
<div class="report-list">
	{{# conversation}}
	<article class="item {{#is_alt}}alt{{/is_alt}}">
		<div class="photo">
			<a href="/lid/{{author.slug}}" class="photo-wrap">
				<b><img src="{{author.avatar}}" width="70" height="70" alt="{{author.full_name}}"></b>
			</a>
		</div>
        <div class="description">
            <div class="wrap">
                <time datetime="{{message.created}}">{{message.created_formatted}}</time>
                <strong class="title"><a href="/lid/{{author.slug}}">{{author.full_name}}</a></strong>
            </div>
            <p>{{message.content}}</p>
            {{#message.draft}}
            <a href="/conversation/draft/{{message.id}}" class="message_link">Edit</a>
            {{/message.draft}}
        </div>

	</article>
	{{/ conversation}}
</div>
{{^is_draft_message}}
    <header class="heading-box">
        <h3>Plaats een reactie</h3>
    </header>
    <div class="msg-box">
        <form action="" method="post">
            <fieldset>
                <input name="recipient_id" type="hidden" value="{{partner_id}}">
                <textarea name="content" placeholder="JOUW REACTIE *" rows="5" cols="50"></textarea>
                <button class="btn" type="submit">verstuur</button>
            </fieldset>
        </form>
    </div>
{{/is_draft_message}}