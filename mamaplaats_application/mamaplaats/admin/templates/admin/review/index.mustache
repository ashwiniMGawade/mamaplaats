<div class="row-fluid">
	<div class="span8">
		<h1>Review Bewerken</h1>
	</div>
	<div class="span4">
		<div class="pull-right">
			<a class="btn right" style="margin-left: 10px;" href="/admin/review-product/{{review.review_product_id}}">Terug</a>
		</div>
	</div>
</div>
<div class="row-fluid">
	{{> messages}}
</div>
<div class="row-fluid sortable ui-sortable">
	<div class="box span6">
		<div class="box-header" data-original-title>
			<h2><i class="halflings-icon edit"></i><span class="break"></span>Persoons Informatie</h2>
			<div class="box-icon">
				<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn-close"><i class="icon-remove"></i></a>
			</div>
		</div>
		<div class="box-content">
			<div class="row-fluid">
				<div class="control-group span2">
					<img src="{{user.avatar}}" width="200" height="200" class="alignright" />
				</div>
				<div class="control-group span5">
					<label class="control-label"><strong>Naam</strong></label>
					<div class="controls">
						{{user.first_name}} {{user.middle_name}} {{user.last_name}}
					</div>
					<br />
					<label class="control-label"><strong>Geboortedatum</strong></label>
					<div class="controls">
						{{user.birthdate}}
					</div>
					<br />
					<label class="control-label"><strong>Adres</strong></label>
					<div class="controls">
						{{review.answer_address}}
					</div>
				</div>
				<div class="control-group span5">
					<label class="control-label"><strong>Email</strong></label>
					<div class="controls">
						{{user.email}}
					</div>
					<br />
					<label class="control-label"><strong>Tel Nr.</strong></label>
					<div class="controls">
						{{review.answer_phone}}
					</div>
					<br />
					<label class="control-label"><strong>Postcode Plaats</strong></label>
					<div class="controls">
						{{review.answer_zip}} {{review.answer_place}}
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="box span6">
		<div class="box-header" data-original-title>
			<h2><i class="halflings-icon edit"></i><span class="break"></span>De Inschrijving</h2>
			<div class="box-icon">
				<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn-close"><i class="icon-remove"></i></a>
			</div>
		</div>
		<div class="box-content">
			<div class="row-fluid">
				<div class="control-group span12">
					<label class="control-label"><strong>Reden voor Inschrijven</strong></label>
					<div class="controls">
						{{review.answer_reason}}
					</div>
				</div>
			</div>

			{{#product.question_extra1}}
			<div class="row-fluid">
				<div class="control-group span12">
					<label class="control-label"><strong>{{product.question_extra1}}</strong></label>
					<div class="controls">
						{{review.answer_extra1}}
					</div>
				</div>
			</div>
			{{/product.question_extra1}}

			{{#product.question_extra2}}
			<div class="row-fluid">
				<div class="control-group span12">
					<label class="control-label"><strong>{{product.question_extra2}}</strong></label>
					<div class="controls">
						{{review.answer_extra2}}
					</div>
				</div>
			</div>
			{{/product.question_extra2}}

			{{#product.question_extra3}}
			<div class="row-fluid">
				<div class="control-group span12">
					<label class="control-label"><strong>{{product.question_extra3}}</strong></label>
					<div class="controls">
						{{review.answer_extra3}}
					</div>
				</div>
			</div>
			{{/product.question_extra3}}

		</div>
	</div>
</div>
<form action="" method="post" enctype="multipart/form-data">
	{{#review}}
	<div class="row-fluid sortable ui-sortable">
		<div class="box span12">
			<div class="box-header" data-original-title>
				<h2><i class="halflings-icon edit"></i><span class="break"></span>De Review</h2>
				<div class="box-icon">
					<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
					<a href="#" class="btn-close"><i class="icon-remove"></i></a>
				</div>
			</div>
			<div class="box-content">
				<div class="row-fluid">
					<div class="control-group span5">
						<label class="control-label" for="title">Titel</label>
						<div class="controls">
							<input name="title" class="span12 focused" id="title" type="text" value="{{title}}">
						</div>
					</div>
					<div class="control-group span4">
						<label class="control-label" for="slug">Url Slug</label>
						<div class="controls">
							<input name="slug" class="span12 focused" id="slug" type="text" value="{{slug}}">
						</div>
					</div>
					<div class="control-group span3">
						<label class="control-label" for="status">Goedkeuren / Afkeuren</label>
						<div class="controls">
							<select class="span12" id="status" name="status">
								{{#statuses}}
								<option value="{{value}}" {{#selected}}selected="selected"{{/selected}}>{{text}}</option>
								{{/statuses}}
							</select>
						</div>
					</div>
				</div>
				<div class="row-fluid">
					<div class="control-group span12">
						<label class="control-label" for="information">Informatie</label>
						<div class="controls">
							<textarea name="information" class="input-block-level tinymce" id="information" rows="8">{{information}}</textarea>
							<br />
						</div>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span12">
						<input class="btn btn-primary" type="submit" value="Opslaan">
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row-fluid sortable ui-sortable">
		<div class="box span12">
			<div class="box-header" data-original-title>
				<h2><i class="halflings-icon edit"></i><span class="break"></span>Secties</h2>
				<div class="box-icon">
					<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
					<a href="#" class="btn-close"><i class="icon-remove"></i></a>
				</div>
			</div>
			<div class="box-content">
				{{#review_sections}}
				<div class="row-fluid">
					<div class="control-group span12">
						<label class="control-label" for="content">{{question}}</label>
						<div class="controls">
							<input name="sections[{{id}}][id]" type="hidden" value="{{id}}">
							<input name="sections[{{id}}][review_product_section_id]" type="hidden" value="{{review_product_section_id}}">
							<textarea name="sections[{{id}}][content]" class="input-block-level tinymce" id="content" rows="8">{{content}}</textarea>
							<br>
						</div>
					</div>
				</div>
				{{/review_sections}}
			</div>
		</div>
	</div>

	<div class="row-fluid sortable ui-sortable">
		<div class="box span12">
			<div class="box-header" data-original-title>
				<h2><i class="halflings-icon edit"></i><span class="break"></span>Scores</h2>
				<div class="box-icon">
					<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
					<a href="#" class="btn-close"><i class="icon-remove"></i></a>
				</div>
			</div>
			<div class="box-content">
				{{#review_ratings}}
				<div class="row-fluid">
					<label class="control-label" for="rating_{{id}}">{{rating_title}}</label>
					<div class="controls">
						<input name="ratings[{{id}}][id]" type="hidden" value="{{id}}">
						<input name="ratings[{{id}}][review_product_rating_id]" type="hidden" value="{{review_product_rating_id}}">
						<input name="ratings[{{id}}][rating]" class="span12 focused" id="rating_{{id}}" type="text" value="{{rating}}">
						<br /><br />
					</div>
				</div>
				{{/review_ratings}}
			</div>
		</div>
	</div>

	<div id="review_remarks" class="row-fluid sortable ui-sortable">
		<div class="box span12">
			<div class="box-header" data-original-title>
				<h2><i class="halflings-icon edit"></i><span class="break"></span>Review Opmerkingen</h2>
				<div class="box-icon">
					<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
					<a href="#" class="btn-close"><i class="icon-remove"></i></a>
				</div>
			</div>
			<div class="box-content">
				<div class="row-fluid">
					<div class="control group span12">
						<table class="table table-striped table-bordered">
							<thead>
							<tr>
								<th>Opmerking</th>
								<th style="width: 200px;">Type</th>
								<th style="width: 100px;">Verwijderen</th>
							</tr>
							</thead>
							<tbody data-bind="foreach: remarks">
							<tr>
								<td>
									<input data-bind="value: id, attr:{name:'remarks['+$index()+'][id]'}" type="hidden">
									<input data-bind="value: remark, attr:{name:'remarks['+$index()+'][remark]'}" class="span12" type="text">
								</td>
								<td>
									<select data-bind="value: type, attr:{name:'remarks['+$index()+'][type]'}">
										<option value="positive">Positief</option>
										<option value="negative">Negatief</option>
									</select>
								</td>
								<td><a data-bind="click: $root.removeRemark" href="#">Verwijderen</a></td>
							</tr>
							</tbody>
						</table>
						<input class="btn btn-primary" type="submit" value="Opslaan">
						<input data-bind="click: addRemark" class="btn pull-right" type="button" value="Nieuwe Opmerking Toevoegen">
						<br>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div id="media_list" class="row-fluid sortable ui-sortable">
		<div class="box span12">
			<div class="box-header" data-original-title>
				<h2><i class="halflings-icon edit"></i><span class="break"></span>Media</h2>
				<div class="box-icon">
					<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
					<a href="#" class="btn-close"><i class="icon-remove"></i></a>
				</div>
			</div>
			<div class="box-content">
				<div class="row-fluid">
					<div class="control group span12">
						<table class="table table-striped table-bordered">
							<thead>
							<tr>
								<th>Voorbeeld</th>
								<th>Titel / URL</th>
								<th>Sectie</th>
								<th>Type</th>
								<th>Uploaddatum</th>
								<th>Verwijderen</th>
							</tr>
							</thead>
							<tbody>
							{{#media}}
							<tr>
								<td><img src="{{sample}}" style="max-width: 120px; max-height: 120px;"></td>
								<td>
									<input name="media[{{id}}][id]" type="hidden" value="{{id}}">
									<input name="media[{{id}}][title]" class="input-append focused" id="title" type="text" value="{{title}}">
									<input name="media[{{id}}][path]" class="input-append focused" id="url" type="text" value="{{path}}">
								</td>
								<td>
									<select style="width: 200px;" id="type" name="media[{{id}}][review_section_id]">
										{{#sections}}
										<option value="{{value}}" {{#selected}}selected="selected"{{/selected}}>{{text}}</option>
										{{/sections}}
									</select>
								</td>
								<td>
									<select style="width: 120px;" id="type" name="media[{{id}}][type]">
										<option value="image" {{#is_image}}selected="selected"{{/is_image}}>Afbeelding</option>
										<option value="video" {{#is_video}}selected="selected"{{/is_video}}>Video</option>
									</select>
								</td>
								<td>{{created}}</td>
								<td><a href="/admin/media/delete/{{id}}?redirect=/admin/review/{{review_id}}">Verwijderen</a></td>
							</tr>
							{{/media}}
							</tbody>
						</table>
					</div>
				</div>
				<div class="row-fluid">
					<div class="control group span12">
						<label class="control-label">Nieuwe media toevoegen</label>
						<table class="table table-bordered">
							<thead>
							<tr>
								<th>Titel / URL</th>
								<th>Upload</th>
								<th>Sectie</th>
								<th>Type</th>
							</tr>
							</thead>
							<tr>
								<td>
									<input name="media[new][id]" type="hidden">
									<input name="media[new][title]" type="text">
									<input name="media[new][path]" type="text">
								</td>
								<td><input class="fileupload" type="file" name="new"></td>
								<td>
									<select style="width: 200px;" id="type" name="media[new][review_section_id]">
										<option value="">Geen</option>
										{{#review_sections}}
										<option value="{{id}}">{{question}}</option>
										{{/review_sections}}
									</select>
								</td>
								<td>
									<select style="width: 120px;" name="media[new][type]">
										<option value="image">Afbeelding</option>
										<option value="video">Video</option>
									</select>
								</td>
							</tr>
							</tbody>
						</table>
						<input class="btn btn-primary" type="submit" value="opslaan">
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row-fluid sortable ui-sortable">
		<div class="box span12">
			<div class="box-header" data-original-title>
				<h2><i class="halflings-icon edit"></i><span class="break"></span>Seo Instellingen</h2>
				<div class="box-icon">
					<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
					<a href="#" class="btn-close"><i class="icon-remove"></i></a>
				</div>
			</div>
			<div class="box-content">
				<div class="row-fluid">
					<div class="control-group span12">
						<label class="control-label" for="meta_title">Meta Titel</label>
						<div class="controls">
							<input class="span12" name="meta_title" id="meta_title" type="text" value="{{meta_title}}">
						</div>
					</div>
				</div>
				<div class="row-fluid">
					<div class="control-group span12">
						<label class="control-label" for="meta_description">Meta Omschrijving</label>
						<div class="controls">
							<textarea name="meta_description" class="input-block-level" id="meta_description" rows="8">{{meta_description}}</textarea>
						</div>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span12">
						<input class="btn btn-primary" type="submit" value="Opslaan">
					</div>
				</div>
			</div>
		</div>
	</div>
	{{/review}}
</form>
<script type="text/javascript">var initial_remarks = {{& review_remarks}};</script>
<script src="/assets/admin/js/admin/ko.review_remarks.js"></script>