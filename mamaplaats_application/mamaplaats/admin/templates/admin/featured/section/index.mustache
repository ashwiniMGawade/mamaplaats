<div class="row-fluid">
	<div class="span8">
		<h1>Uitgelichte Blokken Bewerken</h1>
	</div>
	<div class="span4">
		<div class="pull-right">
			<a class="btn right" style="margin-left: 10px;" href="/admin/featured-sections">Terug</a>
		</div>
	</div>
</div>
<div class="row-fluid">
	{{> messages}}
</div>
<form action="" method="post" enctype="multipart/form-data">
	<div class="row-fluid sortable ui-sortable">
		<div class="box span12">
			<div class="box-header" data-original-title>
				<h2><i class="halflings-icon edit"></i><span class="break"></span>Sectie</h2>
				<div class="box-icon">
					<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
					<a href="#" class="btn-close"><i class="icon-remove"></i></a>
				</div>
			</div>
			<div class="box-content">
				<div class="row-fluid">
					<div class="control-group span4">
						<label class="control-label" for="title">Titel</label>
						<div class="controls">
							<input name="title" class="span12 focused" id="title" type="text" value="{{section.title}}">
						</div>
					</div>
					<div class="control-group span4">
						<label class="control-label" for="tag">Tag</label>
						<div class="controls">
							<input name="tag" class="span12 focused" id="tag" type="text" value="{{section.tag}}">
						</div>
					</div>
					<div class="control-group span4">
						<label class="control-label" for="template">Template</label>
						<div class="controls">
							<select class="span12" id="template" name="template">
								{{#templates}}
								<option value="{{value}}" {{#selected}}selected="selected"{{/selected}}>{{text}}</option>
								{{/templates}}
							</select>
						</div>
					</div>
				</div>
				<div class="row-fluid">
					<div class="control-group span12">
						<label class="control-label" for="description">Omschrijving</label>
						<div class="controls">
							<textarea name="description" class="input-block-level" id="description" rows="8">{{section.description}}</textarea>
						</div>
					</div>
				</div>
				<div class="row-fluid">
					<div class="control group span12">
						<label class="control-label">Blokken</label>
						<table class="table table-striped table-bordered">
							<thead>
								<tr>
									<th>Voorbeeld</th>
									<th>Titel</th>
									<th>URL</th>
									<th>Blok Nummer</th>
									<th>Toon Mobiel?</th>
									<th>Verwijderen</th>
								</tr>
							</thead>
							<tbody>
								{{#section.blocks}}
								<tr>
									<td><img src="/{{image}}" style="max-width: 120px; max-height: 120px;"></td>
									<td>
										<input name="blocks[{{id}}][id]" type="hidden" value="{{id}}">
										<input name="blocks[{{id}}][image]" type="hidden" value="{{image}}">
										<input name="blocks[{{id}}][title]" type="text" value="{{title}}" required>
									</td>
									<td><input name="blocks[{{id}}][url]" type="url" value="{{url}}" required></td>
									<td><input name="blocks[{{id}}][order_number]" class="span12" type="number" min="1" value="{{order_number}}" required></td>
									<td>
										<input name="blocks[{{id}}][show_mobile]" type="hidden" value="0">
										<input name="blocks[{{id}}][show_mobile]" type="checkbox" value="1" {{#show_mobile}}checked{{/show_mobile}}>
									</td>
									<td><input name="blocks[{{id}}][delete]" type="checkbox" value="1"></td>
								</tr>
								{{/section.blocks}}
							</tbody>
						</table>
					</div>
				</div>
				<div class="row-fluid">

				</div>
				<div class="row-fluid">
					<div class="span12">
					</div>
				</div>
				<div class="row-fluid">
					<div class="control group span12">
						<label class="control-label">Nieuw Blok Toevoegen</label>
						<table class="table table-bordered">
							<thead>
							<tr>
								<th>Titel</th>
								<th>URL</th>
								<th>Upload</th>
								<th>Blok Nummer</th>
								<th>Toon Mobiel?</th>
							</tr>
							</thead>
							<tbody>
								<tr>
									<td>
										<input name="blocks[new][id]" type="hidden">
										<input class="span12" name="blocks[new][title]" type="text">
									</td>
									<td><input class="span12" name="blocks[new][url]" type="url"></td>
									<td><input class="fileupload" type="file" name="image"></td>
									<td><input class="span12" name="blocks[new][order_number]" type="number" min="1" value="1"></td>
									<td>
										<input name="blocks[new][show_mobile]" type="hidden" value="0">
										<input name="blocks[new][show_mobile]" type="checkbox" value="1">
									</td>
								</tr>
							</tbody>
						</table>
					</div>
					<div class="row-fluid">
						<input class="btn btn-primary" type="submit" value="opslaan">
					</div>
				</div>
			</div>
		</div>
	</div>
</form>