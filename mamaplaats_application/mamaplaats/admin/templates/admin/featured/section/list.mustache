<div class="row-fluid">
	<div class="span8">
		<h1>Uitgelichte Blokken Secties</h1>
	</div>
	<div class="span4">
		<div class="pull-right">
			<a href="/admin/featured-section" class="btn right">Sectie Toevoegen</a>
		</div>
	</div>
</div>
<div class="row-fluid sortable ui-sortable">
	<div class="box span12">
		<div class="box-header" data-original-title>
			<h2><i class="icon-camera edit"></i><span class="break"></span>Secties</h2>
			<div class="box-icon">
				<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn-close"><i class="icon-remove"></i></a>
			</div>
		</div>
		<div class="box-content">
			<div class="row-fluid">
				<table class="table table-striped table-bordered bootstrap-datatable datatable">
					<thead>
						<tr>
							<th>Titel</th>
							<th>Omschrijving</th>
							<th>Tag</th>
							<th>Acties</th>
						</tr>
					</thead>
					<tbody>
					{{#sections}}
						<tr>
							<td><a href="/admin/featured-section/{{id}}" class="boldtext">{{title}}</a></td>
							<td>{{description}}</td>
							<td>{{tag}}</td>
							<td>
								<a class="btn" href="/admin/featured-section/{{id}}">
									<i class="halflings-icon edit"></i>
								</a>
								<a class="btn" href="/admin/featured-sections?delete_id={{id}}" onclick="return confirm('Weet je zeker dat je \'{{title}}\' wil verwijderen?');">
									<i class="halflings-icon trash"></i>
								</a>
							</td>
						</tr>
					{{/sections}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>