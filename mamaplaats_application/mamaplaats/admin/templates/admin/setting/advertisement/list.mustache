<div class="row-fluid">
    <div class="span8">
        <h1>Advertenties</h1>
    </div>
	<div class="span4">
		<div class="pull-right">
			{{#add_advertisement}}
				<a href="/admin/setting/advertisement" class="btn right">Voeg Advertentie</a>
			{{/add_advertisement}}
		</div>
	</div>
</div>
<div class="row-fluid sortable ui-sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="icon-cog edit"></i><span class="break"></span>Advertenties</h2>
            <div class="box-icon">
                <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="icon-remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <div class="row-fluid">
                <table class="table table-striped table-bordered bootstrap-datatable datatable">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Slug</th>
                        <th>Toestand</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
					{{#advertisements}}
                        <tr>
                            <td>{{id}}</td>
                            <td><a href="/admin/setting/advertisement/{{name}}">{{name}}</a></td>
                            <td><a href="/admin/setting/advertisement/{{slug}}">{{slug}}</a></td>
                            <td>{{status}}</td>
                            <td>
                                <a class="btn" href="/admin/setting/advertisement/{{id}}">
                                    <i class="halflings-icon edit"></i>
                                </a>
                                <a class="btn" href="/admin/setting/advertisement/delete/{{id}}" onclick="return confirm('Weet je zeker dat je \'{{name}}\' wil verwijderen?');">
                                    <i class="halflings-icon trash"></i>
                                </a>
                            </td>
                        </tr>
					{{/advertisements}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>