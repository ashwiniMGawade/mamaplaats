<div class="row-fluid">
    <div class="span8">
        <h1>Advertenties</h1>
    </div>
	{{^advertisements}}
    <div class="span4">
        <div class="pull-right">
            <a href="/admin/setting/advertisement-popup" class="btn right">Voeg Advertentie</a>
        </div>
    </div>
	{{/advertisements}}
</div>
<div class="row-fluid sortable ui-sortable">
	<div class="box span12">
		<div class="box-header" data-original-title>
			<h2><i class="icon-cog edit"></i><span class="break"></span>Advertenties</h2>
			<div class="box-icon">
				<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn-close"><i class="icon-remove"></i></a>
			</div>
		</div>
		<div class="box-content">
			<div class="row-fluid">
				<table class="table table-striped table-bordered bootstrap-datatable datatable">
					<thead>
					<tr>
                        <th>Id</th>
                        <th>Slug</th>
						<th>URL</th>
                        <th>Toestand</th>
                        <th>Action</th>
					</tr>
					</thead>
					<tbody>
					{{#advertisements}}
					<tr>
						<td><a href="/admin/setting/{{slug}}">{{id}}</a></td>
                        <td><a href="/admin/setting/{{slug}}">{{slug}}</a></td>
						<td>{{url}}</td>
                        <td>{{status}}</td>
						<td>
                            <a href="/admin/setting/{{slug}}">
								<i class="halflings-icon edit"></i>
							</a>
						</td>
					</tr>
					{{/advertisements}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>