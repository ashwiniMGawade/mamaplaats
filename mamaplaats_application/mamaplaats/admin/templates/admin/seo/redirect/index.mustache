<div class="row-fluid">
	<div class="span12">
		<h1>Seo 301 Redirects Beheren</h1>
	</div>
</div>
<div class="row-fluid">
	{{> messages}}
</div>
<form action="" method="post" enctype="multipart/form-data">
	<div id="media_list" class="row-fluid sortable ui-sortable">
		<div class="box span12">
			<div class="box-header" data-original-title>
				<h2><i class="halflings-icon edit"></i><span class="break"></span>Slides</h2>
				<div class="box-icon">
					<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
					<a href="#" class="btn-close"><i class="icon-remove"></i></a>
				</div>
			</div>
			<div class="box-content">
				<div class="row-fluid">
					<div class="control group span12">
						<table class="table table-striped table-bordered bootstrap-datatable datatable">
							<thead>
							<tr>
								<th>Van</th>
								<th>Naar</th>
								<th>Toegevoegd</th>
								<th>Verwijderen</th>
							</tr>
							</thead>
							<tbody>
							{{#redirects}}
							<tr>
								<td>{{from_url}}</td>
								<td>{{to_url}}</td>
								<td>{{created}}</td>
								<td><a href="/admin/seo/redirect/delete/{{id}}">Verwijderen</a></td>
							</tr>
							{{/redirects}}
							</tbody>
						</table>
					</div>
				</div>
				<div class="row-fluid">
					<div class="control group span12">
						<label class="control-label">Nieuwe Redirect Toevoegen</label>
						<table class="table table-bordered">
							<thead>
							<tr>
								<th>Van</th>
								<th>Naar</th>
							</tr>
							</thead>
							<tbody>
								<tr>
									<td>
										<div class="input-prepend">
											<span class="add-on">http://www.mamaplaats.nl/</span>
											<input class="span9" name="from_url" type="text" placeholder="Rest van de Url">
										</div>
									</td>
									<td>
										<div class="input-prepend">
											<span class="add-on">http://www.mamaplaats.nl/</span>
											<input class="span9" name="to_url" type="text" placeholder="Rest van de Url">
										</div>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
					<div class="row-fluid">
						<input style="float:left;" class="btn btn-primary" type="submit" value="Redirect toevoegen">
					</div>
				</div>
			</div>
		</div>
	</div>
</form>