{{#user}}
	<div class="row-fluid">
		<div class="span8">
			<h1>Gebruiker Bewerken</h1>
		</div>
		<div class="span4">
			<div class="pull-right">
				<a class="btn right" style="margin-left: 10px;" href="/admin/">Terug</a>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		{{> messages}}
	</div>
	<form action="" method="post" enctype="multipart/form-data">
		<div class="row-fluid sortable ui-sortable">
			<div class="box span12">
				<div class="box-header" data-original-title>
					<h2><i class="halflings-icon edit"></i><span class="break"></span>Persoon</h2>
					<div class="box-icon">
						<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
						<a href="#" class="btn-close"><i class="icon-remove"></i></a>
					</div>
				</div>
				<div class="box-content">
					<div class="row-fluid">
						<legend>Gegevens</legend>
					</div>
					<div class="row-fluid">
						<div class="control-group span4">
							<label class="control-label" for="first_name">Voornaam</label>
							<div class="controls">
								<input name="first_name" class="span12 focused" id="first_name" type="text" value="{{first_name}}">
							</div>
						</div>
						<div class="control-group span4">
							<label class="control-label" for="middle_name">Tussenvoegsel</label>
							<div class="controls">
								<input name="middle_name" class="span12 focused" id="middle_name" type="text" value="{{middle_name}}">
							</div>
						</div>
						<div class="control-group span4">
							<label class="control-label" for="last_name">Achternaam</label>
							<div class="controls">
								<input name="last_name" class="span12 focused" id="last_name" type="text" value="{{last_name}}">
							</div>
						</div>
					</div>
					<div class="row-fluid">
						<div class="control-group span8">
							<label class="control-label" for="user_email">Email</label>
							<div class="controls">
								<input name="user_email" class="span12 focused" id="email" type="text" value="{{email}}">
							</div>
						</div>
						<div class="control-group span4">
							<label class="control-label" for="birthdate">Geboortedatum</label>
							<div class="controls">
								<div class="input-prepend span12">
									<span class="add-on"><i class="icon-calendar"></i></span>
									<input name="birthdate" class="span11 focused" id="birthdate" type="date" value="{{birthdate}}">
								</div>
							</div>
						</div>
					</div>

					<div class="row-fluid">
						<div class="control-group span8">
							<label>Geslacht</label>
							<label class="checkbox inline">
								<input type="radio" name="gender" value="1" {{#is_male}}checked{{/is_male}}>Man
							</label>
							<label class="checkbox inline">
								<input type="radio" name="gender" value="2" {{#is_female}}checked{{/is_female}}>Vrouw
							</label>
						</div>
						<div class="control-group span4">
							<label class="control-label" for="pregnancy_due_date">Uitrekeningsdatum</label>
							<div class="controls">
								<div class="input-prepend span12">
									<span class="add-on"><i class="icon-calendar"></i></span>
									<input name="pregnancy_due_date" class="span11 focused" id="pregnancy_due_date" type="date" value="{{pregnancy_due_date}}">
								</div>
							</div>
						</div>
					</div>
					<div class="row-fluid">
						<div class="control-group span12">
							<label class="control-label" for="biography">Biografie</label>
							<div class="controls">
								<textarea name="biography" id="biography" class="input-block-level" rows="6">{{biography}}</textarea>
							</div>
						</div>
					</div>
					<div class="row-fluid">
						<div class="span12">
							<input class="btn btn-primary" type="submit" value="Opslaan">
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row-fluid sortable ui-sortable">
			<div class="box span12">
				<div class="box-header" data-original-title>
					<h2><i class="halflings-icon edit"></i><span class="break"></span>Account</h2>
					<div class="box-icon">
						<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
						<a href="#" class="btn-close"><i class="icon-remove"></i></a>
					</div>
				</div>
				<div class="box-content">
					<div class="row-fluid">
						<legend>Avatar</legend>
					</div>
					<div class="row-fluid">
						<div class="control-group span6">
								<div class="controls">
									<img src="{{avatar}}?time={{time}}" alt="Geen Foto" width="200" height="200" class="alignright" />
									<label for="remove_avatar" class="checkbox">
										<input name="remove_avatar" value="0" type="hidden">
										<input name="remove_avatar" value="1" type="checkbox" id="remove_avatar"> Verwijder Foto
									</label>
								</div>
							</div>
						<label class="control-label" for="avatar">Nieuwe avatar uploaden</label>
						<input id="avatar" class="file" type="file" name="avatar">
					</div>
					<div class="row-fluid">
						<legend>Instellingen</legend>
					</div>
					<div class="row-fluid">
						<div class="row-fluid">
							<div class="control-group span4">
								<label class="control-label" for="user_login">Loginnaam</label>
								<div class="controls">
									<input name="username" class="span12 focused" id="user_login" type="text" value="{{username}}">
								</div>
							</div>
							<div class="control-group span4">
								<label class="control-label" for="display_name">Weergave naam</label>
								<div class="controls">
									<input name="display_name" class="span12 focused" id="display_name" type="text" value="{{display_name}}">
								</div>
							</div>
							<div class="control-group span4">
								<label class="control-label" for="password">Wachtwoord Wijzigen</label>
								<div class="controls">
									<input name="password" class="span12 focused" id="password" type="password">
								</div>
							</div>
						</div>
						<div class="row-fluid">
							<div class="control-group span4">
								<label class="control-label" for="registration_date">Registratiedatum</label>
								<div class="controls">
									{{registration_date}}
								</div>
							</div>
							<div class="control-group span2">
								<label class="control-label" for="tos">Voorwaarden</label>
								<div class="controls">
									<input type="hidden" name="tos" id="tos" value="0">
									<input name="tos" class="checkbox" id="tos" type="checkbox" value="1" {{#tos}}checked{{/tos}}>
								</div>
							</div>
							<div class="control-group span2">
								<label class="control-label" for="newsletter">Nieuwsbrief</label>
								<div class="controls">
									<input type="hidden" name="newsletter" id="newsletter" value="0">
									<input name="newsletter" class="checkbox" id="newsletter" type="checkbox" value="1" {{#newsletter}}checked{{/newsletter}}>
								</div>
							</div>
							<div class="control-group span4">
								<label class="control-label" for="status">Geactiveerd</label>
								<div class="controls">
									<input type="hidden" name="status" id="status" value="0">
									<input name="status" class="checkbox" id="status" type="checkbox" value="1" {{#status}}checked{{/status}}>
								</div>
							</div>
						</div>
						<div class="row-fluid">
							<div class="control-group span6">
								<label>Blogger Type</label>
								<div class="controls">
										<label class="checkbox inline">
											<input type="radio" name="author_type" value="expert" {{#is_expert}}checked{{/is_expert}}>Expert
										</label>
										<label class="checkbox inline">
											<input type="radio" name="author_type" value="mother" {{#is_mother}}checked{{/is_mother}}>Mama
										</label>
									</div>
								</div>
							</div>
						</div>
						<div class="row-fluid">
							<div class="control-group span12">
								<label>Interesses</label>
								<div class="controls">
									{{#interests}}
									<label class="checkbox">
										<input type="checkbox" name="interests[]" value="{{id}}" {{#selected}}checked{{/selected}}> {{title}}
									</label>
									{{/interests}}
								</div>
							</div>
						</div>

						<div class="row-fluid">
							<div class="span12">
								<input class="btn btn-primary" type="submit" value="Opslaan">
							</div>
						</div>
					</div>
				</div>
		</div>
	</form>
{{/user}}