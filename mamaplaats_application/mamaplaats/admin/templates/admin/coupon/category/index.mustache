<div class="row-fluid">
	<div class="span8">
		<h1>Coupon Categorie Bewerken</h1>
	</div>
	<div class="span4">
		<div class="pull-right">
			<a class="btn right" style="margin-left: 10px;" href="/admin/coupon/categories">Terug</a>
		</div>
	</div>
</div>
<div class="row-fluid">
	{{> messages}}
</div>
<form action="" method="post" enctype="multipart/form-data">
	<div class="row-fluid sortable ui-sortable">
		<div class="box span12">
			<div class="box-header" data-original-title>
				<h2><i class="halflings-icon edit"></i><span class="break"></span>De Categorie</h2>
				<div class="box-icon">
					<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
					<a href="#" class="btn-close"><i class="icon-remove"></i></a>
				</div>
			</div>
			<div class="box-content">
				<div class="row-fluid">
					<div class="control-group span3">
						<label class="control-label" for="name">Naam</label>
						<div class="controls">
							<input name="name" class="span12 focused" id="name" type="text" value="{{category.name}}">
						</div>
					</div>
					<div class="control-group span3">
						<label class="control-label" for="slug">Url Slug</label>
						<div class="controls">
							<input name="slug" class="span12 focused" id="slug" type="text" value="{{category.slug}}">
						</div>
					</div>
					<div class="control-group span3">
						<label class="control-label" for="is_popular">Is Populair</label>
						<div class="controls">
							<select class="span12" id="is_popular" name="is_popular">
								{{#popular}}
								<option value="{{value}}" {{#selected}}selected="selected"{{/selected}}>{{text}}</option>
								{{/popular}}
							</select>
						</div>
					</div>
					<div class="control-group span3">
						<label class="control-label" for="icon">Icoon <i class="coupon-icon-{{category.icon}}"></i></label>
						<div class="controls">
							<select class="span12" id="icon" name="icon">
								{{#icons}}
								<option value="{{value}}" {{#selected}}selected="selected"{{/selected}}>{{text}}</option>
								{{/icons}}
							</select>
						</div>
					</div>
				</div>
				<div class="row-fluid">
					<div class="control-group span12">
						<label class="control-label" for="description">Omschrijving</label>
						<div class="controls">
							<textarea name="description" class="input-block-level" id="description" rows="8">{{category.description}}</textarea>
						</div>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span12">
						<input class="btn btn-primary" type="submit" value="Opslaan">
					</div>
				</div>
			</div>
		</div>
	</div>
</form>