<div class="row-fluid">
	<div class="span8">
		<h1>Coupon Categorieen</h1>
	</div>
	<div class="span4">
		<div class="pull-right">
			<a href="/admin/coupon/category" class="btn right">Categorie Toevoegen</a>
		</div>
	</div>
</div>
<div class="row-fluid sortable ui-sortable">
	<div class="box span12">
		<div class="box-header" data-original-title>
			<h2><i class="icon-camera edit"></i><span class="break"></span>Categorieen</h2>
			<div class="box-icon">
				<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn-close"><i class="icon-remove"></i></a>
			</div>
		</div>
		<div class="box-content">
			<div class="row-fluid">
				<table class="table table-striped table-bordered bootstrap-datatable datatable">
					<thead>
						<tr>
							<th>Titel</th>
							<th>Omschrijving</th>
							<th>Populair</th>
							<th>Acties</th>
						</tr>
					</thead>
					<tbody>
						{{#categories}}
						<tr>
							<td><i class="coupon-icon-{{icon}}"></i> <a href="/admin/coupon/category/{{id}}" class="boldtext">{{name}}</a></td>
							<td>{{description}}</td>
							<td>{{is_popular}}</td>
							<td>
								<a class="btn" href="/admin/coupon/category/{{id}}">
									<i class="halflings-icon edit"></i>
								</a>
								<a class="btn" href="/admin/coupon/categories?delete_id={{id}}" onclick="return confirm('Weet je zeker dat je \'{{name}}\' wil verwijderen?');">
									<i class="halflings-icon trash"></i>
								</a>
							</td>
						</tr>
						{{/categories}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>