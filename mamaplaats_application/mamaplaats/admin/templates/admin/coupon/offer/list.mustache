<div class="row-fluid">
	<div class="span8">
		<h1>Coupon Aanbiedingen</h1>
	</div>
	<div class="span4">
		<div class="pull-right">
			<a href="/admin/coupon/offer/import" class="btn right">Aanbiedingen Importeren</a>&nbsp;
			<a href="/admin/coupon/offer" class="btn right">Aanbieding Toevoegen</a>
		</div>
	</div>
</div>
<div class="row-fluid">
	{{> messages}}
</div>
<div class="row-fluid sortable ui-sortable">
	<div class="box span12">
		<div class="box-header" data-original-title>
			<h2><i class="icon-camera edit"></i><span class="break"></span>Aanbiedingen</h2>
			<div class="box-icon">
				<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn-close"><i class="icon-remove"></i></a>
			</div>
		</div>
		<div class="box-content">
			<div class="row-fluid">
				<table class="table table-striped table-bordered bootstrap-datatable datatable">
					<thead>
						<tr>
							<th>Titel</th>
							<th>Omschrijving</th>
							<th>Start Datum</th>
							<th>Eind Datum</th>
							<th>Type</th>
							<th>Kliks</th>
							<th>Acties</th>
						</tr>
					</thead>
					<tbody>
						{{#offers}}
						<tr>
							<td><a href="/admin/coupon/offer/{{id}}" class="boldtext">{{title}}</a></td>
							<td>{{description}}</td>
							<td>{{start_date}}</td>
							<td>{{end_date}}</td>
							<td>{{type}}</td>
							<td>{{click_outs}}</td>
							<td>
								<a class="btn" href="/admin/coupon/offer/{{id}}">
									<i class="halflings-icon edit"></i>
								</a>
								<a class="btn" href="/admin/coupon/offers?delete_id={{id}}" onclick="return confirm('Weet je zeker dat je \'{{title}}\' wil verwijderen?');">
									<i class="halflings-icon trash"></i>
								</a>
							</td>
						</tr>
						{{/offers}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>