<div class="row-fluid">
	<div class="span8">
		<h1>Coupon Aanbieding Bewerken</h1>
	</div>
	<div class="span4">
		<div class="pull-right">
			<a class="btn right" style="margin-left: 10px;" href="/admin/coupon/offers">Terug</a>
			<a class="btn right" style="margin-left: 10px;" href="/admin/coupon/shop/{{offer.coupon_shop_id}}">Naar Winkel</a>
		</div>
	</div>
</div>
<div class="row-fluid">
	{{> messages}}
</div>
<form action="" method="post" enctype="multipart/form-data">
	<div class="row-fluid sortable ui-sortable">
		<div class="box span12">
			<div class="box-header" data-original-title>
				<h2><i class="halflings-icon edit"></i><span class="break"></span>De Aanbieding</h2>
				<div class="box-icon">
					<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
					<a href="#" class="btn-close"><i class="icon-remove"></i></a>
				</div>
			</div>
			<div class="box-content">
				<div class="row-fluid">
					<div class="control-group span4">
						<label class="control-label" for="title">Titel</label>
						<div class="controls">
							<input name="title" class="span12 focused" id="title" type="text" value="{{offer.title}}">
						</div>
					</div>
					<div class="control-group span4">
						<label class="control-label" for="coupon_shop_id">Welke winkel?</label>
						<div class="controls">
							<select class="span12" id="coupon_shop_id" name="coupon_shop_id">
								{{#shops}}
								<option value="{{value}}" {{#selected}}selected="selected"{{/selected}}>{{text}}</option>
								{{/shops}}
							</select>
						</div>
					</div>
					<div class="control-group span4">
						<label class="control-label" for="url">Wat is de url naar de winkel?</label>
						<div class="controls">
							<input name="url" class="span12 focused" id="url" type="text" value="{{offer.url}}">
						</div>
					</div>
				</div>
				<div class="row-fluid">
					<div class="control-group span4">
						<label class="control-label" for="coupon_category_id">Welke categorie?</label>
						<div class="controls">
							<select class="span12" id="coupon_category_id" name="coupon_category_id">
								{{#categories}}
								<option value="{{value}}" {{#selected}}selected="selected"{{/selected}}>{{text}}</option>
								{{/categories}}
							</select>
						</div>
					</div>
					<div class="control-group span4">
						<label class="control-label" for="type">Welke type aanbieding?</label>
						<div class="controls">
							<select class="span12" id="type" name="type">
								{{#types}}
								<option value="{{value}}" {{#selected}}selected="selected"{{/selected}}>{{text}}</option>
								{{/types}}
							</select>
						</div>
					</div>
					<div class="control-group span4">
						<label class="control-label" for="coupon_code">Wat is de coupon code? (Alleen voor coupons)</label>
						<div class="controls">
							<input name="coupon_code" class="span12 focused" id="coupon_code" type="text" value="{{offer.coupon_code}}">
						</div>
					</div>
				</div>
				<div class="row-fluid">
					<div class="control-group span12">
						<label class="control-label" for="description">Omschrijving</label>
						<div class="controls">
							<textarea name="description" class="input-block-level" id="description" rows="8">{{offer.description}}</textarea>
						</div>
					</div>
				</div>
				<div class="row-fluid">
					<div class="control-group span4">
						<label class="control-label" for="start_date">Start Datum?</label>
						<div class="controls">
							<input name="start_date" class="span12 focused datepicker" id="start_date" type="text" value="{{offer.start_date}}">
						</div>
					</div>
					<div class="control-group span4">
						<label class="control-label" for="end_date">Eind Datum?</label>
						<div class="controls">
							<input name="end_date" class="span12 focused datepicker" id="end_date" type="text" value="{{offer.end_date}}">
						</div>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span12">
						<input class="btn btn-primary" type="submit" value="Opslaan">
					</div>
				</div>
			</div>
		</div>
	</div>
</form>