<div class="row-fluid">
	<div class="span8">
		<h1>Coupon Winkel Bewerken</h1>
	</div>
	<div class="span4">
		<div class="pull-right">
			<a class="btn right" style="margin-left: 10px;" href="/admin/coupon/shops">Terug</a>
		</div>
	</div>
</div>
<div class="row-fluid">
	{{> messages}}
</div>
<form action="" method="post" enctype="multipart/form-data">
	<div id="media_list" class="row-fluid sortable ui-sortable">
		<div class="box span12">
			<div class="box-header" data-original-title>
				<h2><i class="halflings-icon edit"></i><span class="break"></span>Slides</h2>
				<div class="box-icon">
					<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
					<a href="#" class="btn-close"><i class="icon-remove"></i></a>
				</div>
			</div>
			<div class="box-content">
				<div class="row-fluid">
					<div class="control group span12">
						<table class="table table-striped table-bordered bootstrap-datatable datatable">
							<thead>
							<tr>
								<th>Voorbeeld</th>
								<th>Titel</th>
								<th>URL</th>
								<th>Volgorde</th>
								<th>Verwijderen</th>
							</tr>
							</thead>
							<tbody>
							{{#slides}}
							<tr>
								<td><img src="/{{image}}" style="max-width: 120px; max-height: 120px;"></td>
								<td>
									<input name="slides[{{id}}][id]" type="hidden" value="{{id}}">
									<input name="slides[{{id}}][image]" type="hidden" value="{{image}}">
									<input name="slides[{{id}}][title]" class="input-append focused" type="text" value="{{title}}" required>
								</td>
								<td><input name="slides[{{id}}][url]" class="input-append focused" type="url" value="{{url}}" required></td>
								<td><input name="slides[{{id}}][order]" class="input-append focused" type="number" min="1" value="{{order}}" required></td>
								<td><a href="/admin/coupon/slider?delete_id={{id}}">Verwijderen</a></td>
							</tr>
							{{/slides}}
							</tbody>
						</table>
					</div>
				</div>
				<div class="row-fluid">
					<input style="float:left;" class="btn btn-primary" type="submit" value="opslaan">
				</div>
				<div class="row-fluid">
					<div class="span12">
					</div>
				</div>
				<div class="row-fluid">
					<div class="control group span12">
						<label class="control-label">Nieuwe Slide Toevoegen</label>
						<table class="table table-bordered">
							<thead>
							<tr>
								<th>Titel</th>
								<th>URL</th>
								<th>Upload</th>
								<th>Volgorde</th>
							</tr>
							</thead>
							<tbody>
								<tr>
									<td>
										<input name="slides[new][id]" type="hidden">
										<input class="span12" name="slides[new][title]" type="text">
									</td>
									<td><input class="span12" name="slides[new][url]" type="url"></td>
									<td><input class="fileupload" type="file" name="image"></td>
									<td><input class="span12" name="slides[new][order]" type="number" min="1" value="1"></td>
								</tr>
							</tbody>
						</table>
					</div>
					<div class="row-fluid">
						<input style="float:left;" class="btn btn-primary" type="submit" value="Slide toevoegen">
					</div>
				</div>
			</div>
		</div>
	</div>
</form>