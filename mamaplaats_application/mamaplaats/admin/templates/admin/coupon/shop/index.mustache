<div class="row-fluid">
	<div class="span8">
		<h1>Coupon Winkel Bewerken</h1>
	</div>
	<div class="span4">
		<div class="pull-right">
			<a class="btn right" style="margin-left: 10px;" href="/admin/coupon/shops">Terug</a>
		</div>
	</div>
</div>
<div class="row-fluid">
	{{> messages}}
</div>
<form action="" method="post" enctype="multipart/form-data">
	<div class="row-fluid sortable ui-sortable">
		<div class="box span12">
			<div class="box-header" data-original-title>
				<h2><i class="halflings-icon edit"></i><span class="break"></span>De Winkel</h2>
				<div class="box-icon">
					<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
					<a href="#" class="btn-close"><i class="icon-remove"></i></a>
				</div>
			</div>
			<div class="box-content">
				<div class="row-fluid">
					<div class="control-group span4">
						<label class="control-label" for="name">Naam van de Winkel</label>
						<div class="controls">
							<input name="name" class="span12 focused" id="name" type="text" value="{{shop.name}}">
						</div>
					</div>
					<div class="control-group span4">
						<label class="control-label" for="slug">Welke url slug?</label>
						<div class="controls">
							<input name="slug" class="span12 focused" id="slug" type="text" value="{{shop.slug}}">
						</div>
					</div>
					<div class="control-group span4">
						<label class="control-label" for="is_popular">Is een populaire winkel?</label>
						<div class="controls">
							<select class="span12" id="is_popular" name="is_popular">
								{{#popular}}
								<option value="{{value}}" {{#selected}}selected="selected"{{/selected}}>{{text}}</option>
								{{/popular}}
							</select>
						</div>
					</div>
				</div>
				<div class="row-fluid">
					<div class="control-group span4">
						<label class="control-label" for="title">Titel Boven Omschijving</label>
						<div class="controls">
							<input name="title" class="span12 focused" id="title" type="text" value="{{shop.title}}">
						</div>
					</div>
					<div class="control-group span4">
						<label class="control-label" for="url">Wat is de url naar de winkel?</label>
						<div class="controls">
							<input name="url" class="span12 focused" id="url" type="text" value="{{shop.url}}">
						</div>
					</div>
					<div class="control-group span4">
						<label class="control-label" for="coupon_category_id">Welke categorie?</label>
						<div class="controls">
							<select class="span12" id="coupon_category_id" name="coupon_category_id">
								{{#categories}}
								<option value="{{value}}" {{#selected}}selected="selected"{{/selected}}>{{text}}</option>
								{{/categories}}
							</select>
						</div>
					</div>
				</div>
				<div class="row-fluid">
					<div class="control-group span12">
						<label class="control-label" for="description">Omschrijving</label>
						<div class="controls">
							<textarea name="description" class="input-block-level tinymce" id="description" rows="8">{{shop.description}}</textarea>
						</div>
					</div>
				</div>
				<div class="row-fluid">
					<div class="control-group span12">
						<label class="control-label" for="about">Over de Winkel</label>
						<div class="controls">
							<textarea name="about" class="input-block-level tinymce" id="about" rows="8">{{shop.about}}</textarea>
						</div>
					</div>
				</div>
				<div class="row-fluid">
					<div class="control-group span4">
						<label class="control-label" for="external_id">Extern ID</label>
						<div class="controls">
							<input name="external_id" class="span12 focused" id="external_id" type="text" value="{{shop.external_id}}">
						</div>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span12">
						<img class="img-polaroid" width="180" src="{{shop.image}}" alt="Voorbeeld Foto"><br><br>

						<div class="control-group">
							<label class="control-label" for="about">Logo Winkel</label>
							<div class="controls">
								<div class="uploader">
									<input name="image" id="image" type="file">
								</div>
							</div>
						</div>
						<br>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span12">
						<input class="btn btn-primary" type="submit" value="Opslaan">
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
<div class="row-fluid sortable ui-sortable">
	<div class="box span12">
		<div class="box-header" data-original-title>
			<h2><i class="icon-tags edit"></i><span class="break"></span>Aanbiedingen</h2>
			<div class="box-icon">
				<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn-close"><i class="icon-remove"></i></a>
			</div>
		</div>
		<div class="box-content">
			<div class="row-fluid">
				<table class="table table-striped table-bordered bootstrap-datatable datatable">
					<thead>
					<tr>
						<th>Titel</th>
						<th>Omschrijving</th>
						<th>Start Datum</th>
						<th>Eind Datum</th>
						<th>Type</th>
						<th>Kliks</th>
						<th>Acties</th>
					</tr>
					</thead>
					<tbody>
					{{#offers}}
					<tr>
						<td><a href="/admin/coupon/offer/{{id}}" class="boldtext">{{title}}</a></td>
						<td>{{description}}</td>
						<td>{{start_date}}</td>
						<td>{{end_date}}</td>
						<td>{{type}}</td>
						<td>{{click_outs}}</td>
						<td>
							<a class="btn" href="/admin/offer/offer/{{id}}">
								<i class="halflings-icon edit"></i>
							</a>
						</td>
					</tr>
					{{/offers}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>