{{#blog_list}}
<article class="item">
	<figure class="photo">
		<a class="photo-wrap" href="/blog/{{blog.slug}}"><b><img src="{{media.path}}"></b></a>
	</figure>
	<h4><a href="/blog/{{blog.slug}}">{{blog.title}}</a></h4>
	<p class="info">
		<a href="/lid/{{user.slug}}">{{user.first_name}}</a> -
		<time datetime="{{blog.created}}">{{blog.created_formatted}}</time>
	</p>
	<p>{{blog.excerpt}}</p>
</article>
{{/blog_list}}